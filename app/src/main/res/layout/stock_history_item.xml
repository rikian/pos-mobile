<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/table_border"
        android:padding="5dp"
        android:text="senin, 27 desember 2023"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/table_border"
        android:padding="5dp"
        android:text="23:23:23"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/transactionID"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/table_border"
        android:padding="5dp"
        android:text="ss333sdsfd444"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/stockIn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/table_border"
        android:padding="5dp"
        android:text="9999"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/s_purchase"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/table_border"
        android:padding="5dp"
        android:text="Rp 99.999.999"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/stockOut"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/table_border"
        android:padding="5dp"
        android:text="9999"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/remain_stock"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/table_border"
        android:padding="5dp"
        android:text="9999"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/table_border">

        <ImageView
            android:id="@+id/btn_info_stock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:src="@drawable/baseline_info_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</TableRow>